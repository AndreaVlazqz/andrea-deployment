#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Protect master from accidental commits.
echo -e "===\n>> Checking branch name"
branchName=$(git branch | grep '*' | sed 's/* //')

if [ $branchName == 'master' ]
then
  echo -e "\nğŸš« Commit directly to master branch is not allowed!\n" && exit 1
fi

if [ $branchName == 'main' ]
then
 echo -e "\nğŸš« Commit directly to main branch is not allowed!\n" && exit 1
fi

if [[ $branchName = *[![:ascii:]]* ]]
then
  echo -e "\nğŸš« Branch name should not have any ascii and upper case letters, please rename your branch name\n" && exit 1
fi

if [[ $branchName =~ [A-Z] ]]
then
  echo -e "\nğŸš« Branch name should not have any ascii and upper case letters, please rename your branch name\n" && exit 1
fi

echo -e ">> Finish checking branch name\n==="

exit 0

npm run lint
npm run test
